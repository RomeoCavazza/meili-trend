{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://insidr-production.up.railway.app/api/:path*",
      "headers": {
        "X-Forwarded-Proto": "https",
        "X-Forwarded-For": "$remote_addr"
      }
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
